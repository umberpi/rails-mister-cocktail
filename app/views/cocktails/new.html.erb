<div class="container">
  <h1>Add your cocktail</h1>

  <%= simple_form_for @cocktail do |f| -%>
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit class: "btn btn-success"%>
  <% end -%>

  <br>
  <%=  link_to "Back to Cocktails", cocktails_path%>
</div>

